<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Will's Skills</title>
    <link rel="stylesheet" href="stylesheets/style.css"
</head>
<body>
    <h1>Will's Developer Skills!</h1>
    <ul>
        <% skills.forEach(function(t) { %>
          <li>
            <form action="/skills/<%= t.id %>?_method=DELETE" method="POST" class="delete-form">
            </form>  
            <a href="/skills/<%= t.id %>"><%= t.skill %></a>
              - 
            <%= t.done ? 'done' : 'not done' %>
            <button id = "delButton" type="submit">X</button>
          </li>
        <% }); %>
      </ul>
    
</body>
</html>